@page

<style>
    body {
        background: #F4F4F4;
    }
    .fixed-form-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        pointer-events: none; /* Allow clicks to pass through except the form */
    }
    .fixed-form {
        background: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        max-width: 500px;
        width: 100%;
        pointer-events: auto; /* Enable interaction with the form */
    }
    .fixed-form h2 {
        margin-top: 0;
        margin-bottom: 1.5rem;
        letter-spacing: 1px;
        text-align: center; /* Center the heading */
    }
    .form-actions {
        display: flex;
        gap: 1rem;
    }
</style>
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="fixed-form-container">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="fixed-form">
        <h2>SIGN UP</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
            <label asp-for="Input.FirstName">First Name</label>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.LastName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
            <label asp-for="Input.LastName">Last Name</label>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
            <label asp-for="Input.PhoneNumber">Phone Number</label>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Role" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
            <label asp-for="Input.Role">Role</label>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-actions">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <button type="button" class="w-100 btn btn-lg btn-secondary" onclick="clearRegisterForm()">Cancel</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function clearRegisterForm() {
            const form = document.getElementById('registerForm');
            form.reset();
            // Optionally clear validation messages
            const validationSpans = form.querySelectorAll('.text-danger');
            validationSpans.forEach(span => span.textContent = '');
        }
    </script>
}
