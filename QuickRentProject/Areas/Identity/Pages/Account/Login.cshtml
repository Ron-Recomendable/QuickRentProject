@page
@model LoginModel

<style>
    body {
        background: #F4F4F4;
    }
    .fixed-form-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        pointer-events: none;
    }
    .fixed-form {
        background: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        max-width: 500px;
        width: 100%;
        pointer-events: auto;
    }
    .fixed-form h2 {
        margin-top: 0;
        margin-bottom: 1.5rem;
        letter-spacing: 1px;
        text-align: center;
    }
    .login-links {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
        width: 100%;
    }
    .login-link {
        color: #888;
        text-decoration: none;
        font-size: 1rem;
        transition: color 0.4s;
    }
    .login-link:hover {
        color: #111;
        text-decoration: none;
    }
    .register-separator {
        width: 100%;
        max-width: 300px;
        border: none;
        border-top: 1px solid #bdbdbd;
        margin-top: 0;
        margin-bottom: 5px;
        align-self: center;
    }
    .register-btn,
    .btn-primary {
        font-size: 1.25rem; /* Match font size for both buttons */
        font-weight: 500;
        padding: 0.75rem 1.5rem;
    }
    .register-btn {
        background: #4caf50;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        box-shadow: 0 2px 6px rgba(0,0,0,0.07);
        transition: background 0.4s, color 0.4s;
        margin-top: 0;
        text-align: center;
        width: 100%;
        max-width: 300px;
        text-decoration: none;
        display: block;
    }
    .register-btn:hover {
        background: #388e3c;
        color: #fff;
    }
</style>
@{
    ViewData["Title"] = "Log in";
}

<div class="fixed-form-container">
    <form id="account" method="post" class="fixed-form">
        <h2>LOG IN</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password" class="form-label">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </div>
        <div class="login-links">
            <a id="forgot-password" asp-page="./ForgotPassword" class="login-link">Forgot your password?</a>
            <hr class="register-separator" />
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="register-btn">Create new account</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
