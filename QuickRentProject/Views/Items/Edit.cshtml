@model QuickRentProject.Models.Item

@{
    ViewData["Title"] = "Edit";
    var regions = new[]
    {
        "Northland","Auckland","Waikato","Bay of Plenty","Gisborne","Hawke's Bay","Taranaki",
        "Manawatu-Whanganui","Manawatū-Whanganui","Wellington","Tasman","Nelson",
        "Marlborough","West Coast","Canterbury","Otago","Southland"
    };
    var cityPrefill = "";
    var regionPrefill = "";
    if (!string.IsNullOrWhiteSpace(Model?.Location))
    {
        var parts = Model.Location.Split(',', 2);
        cityPrefill = parts.Length > 0 ? parts[0].Trim() : "";
        regionPrefill = parts.Length > 1 ? parts[1].Trim() : "";
    }
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="itemEditForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.CategoryList">
                    <option value="">-- Select category --</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>

            <!-- NZ Location: City + Region (Location is auto-built) -->
            <div class="form-group">
                <label class="control-label">City</label>
                <input id="CityInput"
                       class="form-control"
                       value="@cityPrefill"
                       required
                       pattern="^[A-Za-z][A-Za-z\s.'-]{1,49}$"
                       title="Letters, spaces, . ' - only (2-50 chars). Example: Auckland, Wellington, Dunedin." />
            </div>
            <div class="form-group">
                <label class="control-label">Region (NZ)</label>
                <select id="RegionSelect" class="form-control" required>
                    <option value="">-- Select region --</option>
                    @foreach (var r in regions) {
                        <option value="@r" selected="@(string.Equals(r, regionPrefill, System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@r</option>
                    }
                </select>
            </div>
            <input asp-for="Location" type="hidden" id="LocationHidden" />
            <span asp-validation-for="Location" class="text-danger"></span>

            <!-- Owner: Admin can change owner; Owner sees read-only -->
            @if (ViewBag.CanPickOwner == true)
            {
                <div class="form-group">
                    <label class="control-label">Owner</label>
                    <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerList"></select>
                    <span asp-validation-for="OwnerId" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="control-label">Owner</label>
                    <input type="text" class="form-control" value="@ViewBag.OwnerFullName" readonly />
                    <input type="hidden" asp-for="OwnerId" />
                    <span asp-validation-for="OwnerId" class="text-danger"></span>
                </div>
            }

            <div class="form-group" style="margin-top:12px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            const city = document.getElementById('CityInput');
            const region = document.getElementById('RegionSelect');
            const hiddenLoc = document.getElementById('LocationHidden');
            const form = document.getElementById('itemEditForm');

            function updateLocation() {
                hiddenLoc.value = city.value && region.value ? (city.value.trim() + ', ' + region.value) : '';
            }
            // Initialize hidden field on load
            updateLocation();

            city.addEventListener('input', updateLocation);
            region.addEventListener('change', updateLocation);
            form.addEventListener('submit', function () {
                updateLocation();
            });
        })();
    </script>
}
